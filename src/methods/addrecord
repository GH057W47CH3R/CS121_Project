#include <iostream>
#include "core/record_array.hpp"

void RecordArray::add_record(const char* newName) {
    Record* newArr = new Record[size + 1];

    for (std::uint32_t i = 0; i < size; i++) {
        newArr[i] = data[i];
    }

    std::strncpy(newArr[size].name, newName, 63);
    newArr[size].name[63] = '\0';

    delete[] data;

    data = newArr;
    size++;
}
